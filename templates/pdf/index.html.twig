{% extends 'base.html.twig' %}

{% block title %}Générer un PDF{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
        <div class="bg-white shadow-lg rounded-2xl p-6 w-full max-w-md">
            <h1 class="text-2xl font-semibold text-gray-800 text-center mb-4">
                Générer un PDF
            </h1>

            {# Messages flash #}
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 text-green-700 p-3 rounded-md mb-3">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 text-red-700 p-3 rounded-md mb-3">
                    {{ message }}
                </div>
            {% endfor %}

            {# Formulaire #}
            {{ form_start(form, { 'attr': {'data-turbo': 'false', 'class': 'space-y-4'} }) }}

            <div>
                {{ form_label(form.url, 'URL à convertir en PDF', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.url, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300'}}) }}
                {{ form_errors(form.url) }}
            </div>

            {# Bouton unique - suppression du bouton manuel #}
            <div class="mt-4">
                {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
