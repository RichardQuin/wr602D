{% extends 'base.html.twig' %}

{% block title %}Confirmer l'abonnement{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-16 max-w-4xl">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Confirmer votre abonnement</h1>
            <p class="text-xl text-gray-600">Voici un récapitulatif de votre abonnement sélectionné.</p>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">{{ subscription.name }}</h2>

            <div class="text-4xl font-bold text-blue-600 mb-6">
                {% if subscription.price == 0 %}
                    Gratuit
                {% else %}
                    {{ price|number_format(2, ',', ' ') }}€
                {% endif %}
            </div>

            <ul class="mb-8 space-y-3 text-gray-600">
                <li>{{ subscription.description|default('Avantages exclusifs') }}</li>
            </ul>

            <form action="{{ path('subscription_confirm', {'id': subscription.id}) }}" method="get">
                <label for="duration" class="block text-gray-700">Durée (en mois)</label>
                <input type="number" id="duration" name="duration" value="{{ duration }}" min="1" class="border border-gray-300 rounded-md px-4 py-2 mb-6 w-full" />

                <button type="submit" class="w-full block text-center py-3 rounded-md bg-green-600 text-white hover:bg-green-700">
                    Confirmer l'abonnement
                </button>
            </form>
        </div>
    </div>
{% endblock %}
